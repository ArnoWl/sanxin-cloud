<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanxin.cloud.mapper.BAccountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sanxin.cloud.entity.BAccount">
        <id column="id" property="id" />
        <result column="bid" property="bid" />
        <result column="total_income" property="totalIncome" />
        <result column="money" property="money" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 乐观锁修改金额 -->
    <update id="updateLockVersion" parameterType="com.sanxin.cloud.entity.BAccount">
        update b_account set
        <if test="money != null">
            money = #{money,jdbcType=DECIMAL},
        </if>
        <if test="totalIncome != null">
            total_income = #{totalIncome,jdbcType=DECIMAL},
        </if>
        version = version+1
        where bid = #{bid,jdbcType=INTEGER}
        and version=#{version,jdbcType=INTEGER}
    </update>

</mapper>
