<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanxin.cloud.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sanxin.cloud.entity.SysUser">
        <id column="id" property="id" />
        <result column="login" property="login" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="phone" property="phone" />
        <result column="createtime" property="createtime" />
        <result column="roleid" property="roleid" />
        <result column="headurl" property="headurl" />
        <result column="status" property="status" />
    </resultMap>

    <select id="querySysUserList" parameterType="com.sanxin.cloud.entity.SysUser"
            resultType="com.sanxin.cloud.entity.SysUser">
        select * from sys_user
        where 1=1
        <if test="login !=null and login != '' ">
            and login=#{login,jdbcType=VARCHAR }
        </if>
        <if test="status !=null  ">
            and status=#{status,jdbcType=INTEGER }
        </if>
        order by createtime desc


    </select>

</mapper>
