<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanxin.cloud.mapper.BDeviceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sanxin.cloud.entity.BDevice">
        <id column="id" property="id" />
        <result column="bid" property="bid" />
        <result column="code" property="code" />
        <result column="type" property="type" />
        <result column="address_detail" property="addressDetail" />
        <result column="lon_val" property="lonVal" />
        <result column="lat_val" property="latVal" />
        <result column="start_day" property="startDay" />
        <result column="end_day" property="endDay" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <select id="queryDeviceList" resultMap="BaseResultMap">
        SELECT a.*, b.nick_name AS businessName
        FROM b_device a
        LEFT JOIN b_business b ON a.bid = b.id
        <where>
            <if test="device.status != null">
                a.status = #{device.status, jdbcType=INTEGER}
            </if>
            <if test="device.code != null and device.code != ''">
                and a.code like concat('%', #{device.code, jdbcType=INTEGER}, '%')
            </if>
        </where>
    </select>
</mapper>
