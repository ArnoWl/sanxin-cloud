<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanxin.cloud.mapper.CAccountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sanxin.cloud.entity.CAccount">
        <id column="id" property="id" />
        <result column="cid" property="cid" />
        <result column="money" property="money" />
        <result column="hour" property="hour" />
        <result column="deposit" property="deposit" />
        <result column="version" property="version" />
        <result column="password" property="password" />
    </resultMap>

    <select id="sumDepositMoney" resultType="java.math.BigDecimal">
        SELECT IFNULL(sum(deposit), 0) from c_account
    </select>

    <!-- 乐观锁修改金额 -->
    <update id="updateLockVersion" parameterType="com.sanxin.cloud.entity.CAccount">
        update c_account set
        <if test="money != null">
            money = #{money,jdbcType=DECIMAL},
        </if>
        <if test="hour != null">
            hour = #{hour,jdbcType=DECIMAL},
        </if>
        <if test="deposit != null">
            deposit = #{deposit, jdbcType=DECIMAL},
        </if>
        version = version+1
        where cid = #{cid,jdbcType=INTEGER}
        and version=#{version,jdbcType=INTEGER}
    </update>
</mapper>
