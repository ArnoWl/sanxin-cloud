<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanxin.cloud.mapper.SysRolesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sanxin.cloud.entity.SysRoles">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="menu_ids" property="menuIds" />
        <result column="status" property="status" />
        <result column="createtime" property="createtime" />
        <result column="target_id" property="targetId" />
    </resultMap>


    <select id="queryRoles" parameterType="com.sanxin.cloud.entity.SysRoles" resultType="com.sanxin.cloud.entity.SysRoles">
        select * from sys_roles a
        where 1=1
        <if test="role.name !=null and role.name != '' ">
            and a.name=#{role.name,jdbcType=VARCHAR }
        </if>
        <if test="role.status !=null  ">
            and a.status=#{role.status,jdbcType=INTEGER }
        </if>
        order by createtime asc
    </select>
</mapper>
